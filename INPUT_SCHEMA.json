{
    "title": "Input schema for the hello_word actor.",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "startUrl": {
            "type": "string",
            "title": "Start Url",
            "description": "Url to start crawling from",
            "editor": "textfield"
        },
        "loginUsername": {
            "type": "string",
            "title": "Username",
            "description": "VK Login Username",
            "editor": "textfield"
        },
        "loginPassword": {
            "type": "string",
            "title": "Password",
            "description": "VK Login Password",
            "editor": "textfield"
        },
        "baseUrl": {
            "type": "string",
            "title": "Base Url",
            "description": "Base Url",
            "editor": "textfield",
            "default": "https://vk.com"
        },
        "maxLevel": {
            "type": "integer",
            "title": "Max Level",
            "description": "Maximum level of crawling",
            "editor": "number",
            "default": 0,
            "minimum": 0,
            "maximum": 3,
            "nullable": false
        }
    },
    "required": [
        "loginUsername",
        "loginPassword",
        "startUrl"
    ]
}
